<body class="bg-image p-5 text-center shadow-1-strong rounded mb-5 text-white" style="background-image: url('/image/library.jpg');
">
    <div class="container bg-light">
        <form style="max-width:300px;margin:auto;margin-top: 25px;" action="/auth/admin-signup" method="POST">
            <div class="mb-3">
                <div class="text-center">
                   
                    <h3 class="font-weight-bold text-dark mb-3">CREATE ADMIN ACCOUNT</h3>
                       
                </div>
                <div class="row">
                  <div class="col-md-12 mb-3"">
                    <input type="text" name="username" placeholder="Username" class="form-control" required>
                  </div>
                    <div class="col-md-12 mb-3">
                        <input type="Email" placeholder="Email" class="form-control" id="exampleInputEmail" name="email">
                    </div>
                    
                    <div class="col-md-12 mb-3"">
                        <input type="password" placeholder="*********" class="form-control" id="exampleInputPasswordexampleInputPassword1" name="password">
                    </div>
                     <div class="col-md-12 mb-3"">
                      <input type="text" name="adminCode" placeholder="Secret Code" class="form-control" required>
                    </div>
                    <div class="d-grid col-12 mx-auto">
                        <button type="submit" class="btn btn-primary ">Sign</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>

</html>


